                Margin="30,5,30,0"
                HorizontalAlignment="Stretch"
                Background="#FFEEEEEE"
                Header="Thông tin cá nhân">
                <StackPanel
                    Margin="20,10"
                    Orientation="Vertical"
                    TextBlock.Foreground="{DynamicResource MaterialDesignBody}">
                    <TextBlock Opacity=".68" TextWrapping="Wrap">
                        Nguyễn Huỳnh Thanh Tâm<LineBreak />
                        Email: ngh_thanhtam@yahoo.com</TextBlock>
                </StackPanel>
            </Expander>

            <Expander
                Margin="30,5,30,0"
                HorizontalAlignment="Stretch"
                Background="#FFEEEEEE"
                Header="Giới thiệu bản thân">
                <StackPanel
                    Margin="20,10"
                    Orientation="Vertical"
                    TextBlock.Foreground="{DynamicResource MaterialDesignBody}">
                    <TextBlock Opacity=".68" TextWrapping="Wrap">
                        Sở trường<LineBreak />
                        Sở thích:</TextBlock>
                </StackPanel>
            </Expander>

        </StackPanel>



        <StackPanel Grid.Row="1" Grid.Column="1">
            <Image
                Height="210"
                Margin="60,30,60,0"
                Source="/Judge3T;component/Images/TIen.png" />


            <Expander
                Margin="30,5,30,0"
                HorizontalAlignment="Stretch"
                Background="#FFEEEEEE"
                Header="Thông tin cá nhân">
                <StackPanel
                    Margin="20,10"
                    Orientation="Vertical"
                    TextBlock.Foreground="{DynamicResource MaterialDesignBody}">
                    <TextBlock Opacity=".68" TextWrapping="Wrap">
                        Đặng Minh Tiến<LineBreak />
                        Email: dangminhtien06@gmail.com<LineBreak />
                        Website: KienThuc24h.com</TextBlock>


                </StackPanel>
            </Expander>

            <Expander
                Margin="30,5,30,0"
                HorizontalAlignment="Stretch"
                Background="#FFEEEEEE"
                Header="Giới thiệu bản thân">
                <StackPanel
                    Margin="20,10"
                    Orientation="Vertical"
                    TextBlock.Foreground="{DynamicResource MaterialDesignBody}">
                    <TextBlock Opacity=".68" TextWrapping="Wrap">
                        Sở trường<LineBreak />
                        Sở thích:</TextBlock>
                </StackPanel>
            </Expander>


        </StackPanel>




        <StackPanel Grid.Row="1" Grid.Column="2">
            <Image
                Height="210"
                Margin="60,30,60,0"
                Source="/Judge3T;component/Images/trung.png" />


            <Expander
                Margin="30,5,30,0"
                HorizontalAlignment="Stretch"
                Background="#FFEEEEEE"
                Header="Thông tin cá nhân">
                <StackPanel
                    Margin="20,10"
                    Orientation="Vertical"
                    TextBlock.Foreground="{DynamicResource MaterialDesignBody}">
                    <TextBlock Opacity=".68" TextWrapping="Wrap">
                        Nguyễn Tây Trung<LineBreak />
